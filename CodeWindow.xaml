<Window x:Class="CafeApp.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeApp"
        mc:Ignorable="d"
        Title="Код подтверждения" Height="200" Width="300" 
        WindowStyle="ToolWindow" Topmost="True" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Ваш код подтверждения:" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBox x:Name="txtCode" Text="{Binding Code}" FontSize="20" FontWeight="Bold" 
                     HorizontalAlignment="Center" TextAlignment="Center" Width="100" 
                     IsReadOnly="True" Background="LightYellow" BorderBrush="Gray"/>
            <Button Content="Закрыть" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>